# =============================================================================
# Algotrading Project - Environment Variables
# =============================================================================
# Copy this file to .env and fill in your actual values
# =============================================================================

# =============================================================================
# AI & LLM Configuration
# =============================================================================

# Anthropic Claude API Key (REQUIRED for ADW workflows)
ANTHROPIC_API_KEY=your_anthropic_api_key_here
OPENAI_API_KEY=your_openai_api_key_here
# Claude Code CLI path (optional, default: "claude")
CLAUDE_CODE_PATH=claude

# Claude bash working directory setting (optional, default: "true")
CLAUDE_BASH_MAINTAIN_PROJECT_WORKING_DIR=true

# =============================================================================
# GitHub Configuration
# =============================================================================

# GitHub Personal Access Token (optional - falls back to gh CLI auth)
# Required for automated PR creation, issue management, etc.
GITHUB_PAT=your_github_personal_access_token_here

# =============================================================================
# OpenFX Trading API Configuration
# =============================================================================

# OpenFX API Base URL
OPENFX_URL=https://marginalttdemowebapi.fxopen.net/api/v2

# OpenFX API Credentials
OPENFX_API_ID=your_openfx_api_id
OPENFX_API_KEY=your_openfx_api_key
OPENFX_API_SECRET=your_openfx_api_secret

# =============================================================================
# Supabase Database Configuration
# =============================================================================

# Supabase Project URL
SUPABASE_URL=https://your-project.supabase.co

# Supabase Anonymous/Public Key
SUPABASE_ANON_KEY=your_supabase_anon_key

# Supabase Service Role Key (for admin operations)
SUPABASE_SERVICE_KEY=your_supabase_service_key

# =============================================================================
# FastAPI Server Configuration
# =============================================================================

# Debug mode (true/false)
API_DEBUG=true

# API host binding
API_HOST=0.0.0.0

# API server port (default: 8000)
API_PORT=8000

# CORS allowed origins (comma-separated)
CORS_ORIGINS=*

# =============================================================================
# React Client Configuration
# =============================================================================

# Backend API URL for React client
REACT_APP_API_URL=http://localhost:8000/api

# Optional React debug settings
# REACT_APP_DEBUG=true
# REACT_APP_VERSION=1.0.0

# =============================================================================
# ADW Webhook Server Configuration
# =============================================================================

# Webhook server port (default: 8001)
PORT=8001

# =============================================================================
# Cloudflare R2 Storage (Optional - for screenshot uploads)
# =============================================================================

# Cloudflare Account ID
# CLOUDFLARE_ACCOUNT_ID=your_cloudflare_account_id

# R2 Access Credentials
# CLOUDFLARE_R2_ACCESS_KEY_ID=your_r2_access_key_id
# CLOUDFLARE_R2_SECRET_ACCESS_KEY=your_r2_secret_access_key

# R2 Bucket Configuration
# CLOUDFLARE_R2_BUCKET_NAME=your_bucket_name
# CLOUDFLARE_R2_PUBLIC_DOMAIN=your-public-domain.com

# =============================================================================
# E2B Cloud Sandbox (Optional - for isolated agent execution)
# =============================================================================

# E2B API Key for cloud sandbox environments
# E2B_API_KEY=your_e2b_api_key

# =============================================================================
# Cloudflare Tunnel (Optional - for exposing local webhook server)
# =============================================================================

# Cloudflared tunnel token for secure tunnel connections
# CLOUDFLARED_TUNNEL_TOKEN=your_cloudflared_tunnel_token
