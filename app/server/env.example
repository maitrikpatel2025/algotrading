# =============================================================================
# Forex Trading API Server (FastAPI) - Environment Variables
# =============================================================================
# Rename this file to .env and fill in your actual values
# NEVER commit the .env file with real credentials to version control!
# =============================================================================

# -----------------------------------------------------------------------------
# OpenFX API Configuration
# -----------------------------------------------------------------------------
# Get your API credentials from your OpenFX broker
OPENFX_URL=https://marginalttdemowebapi.fxopen.net:8443/api/v2
OPENFX_API_ID=your_api_id_here
OPENFX_API_KEY=your_api_key_here
OPENFX_API_SECRET=your_api_secret_here

# -----------------------------------------------------------------------------
# Supabase Database Configuration
# -----------------------------------------------------------------------------
# Get your Supabase credentials from: https://supabase.com/dashboard/project/_/settings/api
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_KEY=your_service_key_here
# -----------------------------------------------------------------------------
# FastAPI Server Configuration
# -----------------------------------------------------------------------------
# Debug mode (True/False) - Set to False in production!
API_DEBUG=True

# Host address (0.0.0.0 allows external connections)
API_HOST=0.0.0.0

# Port number for the API server
API_PORT=8000
